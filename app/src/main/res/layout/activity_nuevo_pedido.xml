<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUEVO PEDIDO"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingBottom="8dp" />

    <!-- Campo nombre del cliente -->
    <EditText
        android:id="@+id/etNombreCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del cliente"
        android:layout_marginBottom="8dp"/>

    <!-- Buscar producto -->
    <EditText
        android:id="@+id/etBuscarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar producto"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginBottom="12dp"/>

    <!-- Lista de productos disponibles -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Productos disponibles:"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/listaProductosDisponibles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Producto de ejemplo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EEEEEE"
                android:padding="8dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_shopping_cart_24"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Producto 1" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quedan: 150 uds"/>
                </LinearLayout>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2€"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EEEEEE"
                android:padding="8dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_shopping_cart_24"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Producto 1" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quedan: 150 uds"/>
                </LinearLayout>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2€"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EEEEEE"
                android:padding="8dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_shopping_cart_24"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Producto 1" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quedan: 150 uds"/>
                </LinearLayout>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2€"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EEEEEE"
                android:padding="8dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_shopping_cart_24"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Producto 1" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quedan: 150 uds"/>
                </LinearLayout>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2€"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EEEEEE"
                android:padding="8dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_shopping_cart_24"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Producto 1" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quedan: 150 uds"/>
                </LinearLayout>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2€"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Lista de productos seleccionados -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Productos añadidos:"
        android:textStyle="bold"
        android:layout_marginTop="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/listaProductosSeleccionados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Producto de ejemplo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="#DDDDDD"
                android:padding="10dp"
                android:text="Producto 1        2€" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="#DDDDDD"
                android:padding="10dp"
                android:text="Producto 1        2€" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="#DDDDDD"
                android:padding="10dp"
                android:text="Producto 1        2€" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="#DDDDDD"
                android:padding="10dp"
                android:text="Producto 1        2€" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="#DDDDDD"
                android:padding="10dp"
                android:text="Producto 1        2€" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="#DDDDDD"
                android:padding="10dp"
                android:text="Producto 1        2€" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="#DDDDDD"
                android:padding="10dp"
                android:text="Producto 1        2€" />
        </LinearLayout>

    </ScrollView>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelarPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="Cancelar"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnContinuarPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Continuar" />
    </LinearLayout>
</LinearLayout>
