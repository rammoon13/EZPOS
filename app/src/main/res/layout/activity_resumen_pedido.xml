        android:layout_height="wrap_content"
        android:text="RESUMEN DEL PEDIDO"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="8dp" />

    <!-- Nombre y fecha -->
