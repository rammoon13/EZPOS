    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/titulo_inventario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EZPOS"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
